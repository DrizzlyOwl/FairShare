{
  "name": "fairshare",
  "version": "1.0.0",
  "description": "Fair bill splitting calculator for couples based on salary proportions.",
  "main": "app.js",
  "scripts": {
    "start": "http-server . -p 8080",
    "test": "npm run test:unit && npm run test:cypress && npm run test:a11y",
    "test:unit": "node run_unit_tests.js",
    "test:cypress": "cypress run --spec 'cypress/integration/*.js'",
    "test:a11y": "cypress run --spec cypress/integration/accessibility_spec.js",
    "cypress:open": "cypress open",
    "lint": "eslint src unit run_unit_tests.js service-worker.js"
  },
  "keywords": [
    "calculator",
    "bills",
    "splitting",
    "salary",
    "proportion"
  ],
  "author": "Ash Davies (DrizzlyOwl) and Gemini",
  "license": "MIT",
  "devDependencies": {
    "axe-core": "^4.11.1",
    "cypress": "^12.0.0",
    "cypress-axe": "^1.7.0",
    "eslint": "^10.0.0",
    "http-server": "^14.1.1",
    "jsdom": "^22.1.0"
  }
}
